pid = {{ stunnel_pid }}
output = {{ stunnel_output }}

{% if stunnel_sslversion %}
sslVersion = {{ stunnel_sslversion }}
{% endif %}
{% if stunnel_ssl_version_min %}
sslVersionMin = {{ stunnel_ssl_version_min }}
{% endif %}
{% if stunnel_ssl_version_max %}
sslVersionMax = {{ stunnel_ssl_version_max }}
{% endif %}

{% if stunnel_use_certificate %}
cert = /etc/stunnel/stunnel.pem
{% endif -%}

{% for service in stunnel_services %}
[{{service.name}}]
{% if service.client | default(false) %}
  client = yes
{% endif %}
{% if ( stunnel_use_psk or service.use_psk ) and service.PSKidentity | default(false) %}
  PSKidentity = {{ service.PSKidentity }}
{% endif %}
  accept = {{ service.accept }}
  connect = {{ service.connect }}
{% if stunnel_use_psk or service.use_psk %}
  ciphers = PSK
  PSKsecrets = /etc/stunnel/psk.txt
{% endif %}
{% endfor %}
